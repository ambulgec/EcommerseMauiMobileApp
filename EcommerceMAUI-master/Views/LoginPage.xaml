<StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"  Spacing="60" WidthRequest="400" HeightRequest="400">
            <StackLayout>

                    <Entry x:Name="UsernameEntry" Placeholder="Gmail Address" TextColor="Black" PlaceholderColor="Gray" Text="{Binding Email}"></Entry>
                


                <Label Text="{Binding EmailError}" TextColor="Red"/>

                    <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" TextColor="Black" PlaceholderColor="Gray" Text="{Binding Password}"></Entry>
                <Label Text="{Binding PasswordError}" TextColor="Red"/>
                <StackLayout Orientation="Horizontal">
                    <CheckBox x:Name="chkKeepSignedIn" Margin="0,10,0,0" Color="Black"/>
                    <Label Text="Keep me signed in" VerticalOptions="Center" TextColor="Black" />
                </StackLayout>
                <!--<Button Command="{Binding Source={x:Reference loginpage}, Path=BindingContext.ValidateEmailCommand}" CommandParameter="{Binding .}" />-->
                <Button Text="Login" BackgroundColor="#3498DB" TextColor="White" CornerRadius="20" 
                       Clicked="OnLoginButtonClicked" IsEnabled="{Binding IsLoginEnabled}"></Button>
            <Button Text="Forgot Password?" Clicked="OnForgotPasswordClicked" BackgroundColor="Transparent" TextColor="#3498DB"/>

            </StackLayout>
    </StackLayout>
</ContentPage>







